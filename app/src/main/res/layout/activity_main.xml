<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#fafafa"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/RadioButtonBottomTab"
            android:checked="true"
            android:drawableTop="@drawable/icon_home_sel"
            android:text="首页"
            android:textColor="@drawable/txtcolor_gray2oran_sel" />

        <RadioButton
            android:id="@+id/rb_message"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_message_sel"
            android:text="消息"
            android:textColor="@drawable/txtcolor_gray2oran_sel" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/correct_oran_sel"
            android:padding="8dp"
            android:layout_margin="30dp"
            android:src="@drawable/icon_add_sel" />

        <RadioButton
            android:id="@+id/rb_discover"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_discover_sel"
            android:text="发现"
            android:textColor="@drawable/txtcolor_gray2oran_sel" />

        <RadioButton
            android:id="@+id/rb_my"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_my_sel"
            android:text="我"
            android:textColor="@drawable/txtcolor_gray2oran_sel" />

    </RadioGroup>

</LinearLayout>
