<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white2gray_sel"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_margin="4dp"
        android:textColor="@color/colorTxtBlack"
        android:text="光催化"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividing" />

    <LinearLayout
        android:id="@+id/ll_item_people"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avatar_luntan01"
            android:background="@color/colorOrange"/>

        <LinearLayout
            android:id="@+id/ll_item_title"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_subhead"
                style="@style/TextViewSubhead"
                android:layout_marginTop="2dp"
                android:text="新浪微博" />

            <TextView
                android:id="@+id/tv_caption"
                style="@style/TextViewCaption"
                android:layout_marginTop="4dp"
                android:text="广东新闻联播" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/card_icon_addattention" />

            <TextView
                android:id="@+id/text_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="@dimen/txt_caption" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividing" />

    </LinearLayout>

    <TextView
        android:id="@+id/detil_content"
        android:layout_width="match_parent"
        style="@style/TextViewBody"
        android:layout_marginTop="-12dp"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/img_luntan_detail_01"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/luntan01"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:id="@+id/ll_luntan_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_luntan_detail_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewBody"/>

        <ImageView
            android:id="@+id/img_luntan_detail_02"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/luntan01"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_luntan_detail_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewBody"/>

        <ImageView
            android:id="@+id/img_luntan_detail_03"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/luntan01"
            android:scaleType="fitCenter"/>


    </LinearLayout>

</LinearLayout>